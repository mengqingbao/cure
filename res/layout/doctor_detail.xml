<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/u0_normal"  >

    <RelativeLayout
        android:id="@+id/doctor_detail_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_menu_bg"
        android:orientation="vertical" >

        <Button
            android:id="@+id/doctor_detail_btn_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_btn_back"
            android:onClick="cancel"
            android:paddingLeft="10dp"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <Button
            android:id="@+id/doctor_detail_add_chat"
            style="@drawable/selector_btn_add"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_btn_add"
            android:paddingRight="10dp"
            android:text="..."
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="聚中医"
            android:textColor="#ffffff"
            android:textSize="20.0sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/doctor_detail_rl_layout3"
        android:layout_below="@+id/doctor_detail_layout"
        android:layout_above="@+id/doctor_detail_rl_layout4"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/doctor_detail_rl_layout3_1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/doctor_detail_iv1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/moren" />

            <TextView
                android:id="@+id/doctor_detail_tv1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/doctor_detail_iv1"
                android:text="张仲景  \n河南南阳" />

            <TextView
                android:id="@+id/doctor_detail_tv2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/doctor_detail_tv1"
                android:layout_toLeftOf="@+id/doctor_detail_tv3"
                android:text="感冒伤寒杂病" />

            <TextView
                android:id="@+id/doctor_detail_tv3"
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:layout_height="fill_parent"
                android:text="证  老" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/doctor_detail_rl_layout3_2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="#000066"
                android:textSize="20sp"
                android:text="医师简历" />

            <TextView
                android:id="@+id/textView2"
                android:layout_toRightOf="@+id/textView1"
                android:layout_toLeftOf="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text=">" />
                    
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/doctor_detail_rl_layout3_3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@color/white" >
            <View  android:layout_width="fill_parent"  
		    android:layout_height="2px" 
		   android:background="@color/black_overlay" /> 
		
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="#000066"
                android:textSize="20sp"
                android:text="师承图谱" />

            <TextView
                android:id="@+id/textView4"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toLeftOf="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="师从张绍祖，现收徒" />

            <TextView
                android:id="@+id/textView5"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text=">" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/doctor_detail_rl_layout3_4"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@color/white" 
            android:layout_marginTop="20dp">
             <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="#000066"
                android:textSize="20sp"
                android:text="咨询记录" />

            <TextView
                android:id="@+id/textView7"
                android:layout_toRightOf="@+id/textView6"
                android:layout_toLeftOf="@+id/textView8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:text="满意度 96%   390 评价" />

            <TextView
                android:id="@+id/textView8"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text=">" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/doctor_detail_rl_layout3_4"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@color/white" >
          <View android:layout_width="fill_parent"  
		    android:layout_height="2px" 
		   android:background="@color/black_overlay"/> 
		     <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="#000066"
                android:textSize="20sp"
                android:text="诊疗记录" />

            <TextView
                android:id="@+id/textView10"
                android:layout_toRightOf="@+id/textView9"
                android:layout_toLeftOf="@+id/textView11"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:text="有效率 98%  814 评价" />

            <TextView
                android:id="@+id/textView11"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text=">" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/doctor_detail_rl_layout4"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/maintab_toolbar_bg"
        android:gravity="center|center_vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:background="@drawable/doctor_search_btn" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免费咨询"
            android:layout_toRightOf="@+id/button1"
            android:background="@drawable/u59_normal" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button2"
            android:background="@drawable/u61_normal" 
            android:text="出诊()" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button3"
            android:background="@drawable/u57_normal" 
            android:text="收藏" />

    </RelativeLayout>

</RelativeLayout>