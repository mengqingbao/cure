<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag2_list_item"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    android:orientation="horizontal" >
           <ImageView
            android:id="@+id/in_fr2_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/moren" />

        <TextView
            android:id="@+id/in_fr2_tv1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/in_fr2_iv"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:textColor="#000066"
            android:text="感冒" />
        <TextView
            android:id="@+id/in_fr2_tv2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/in_fr_btn1"
            android:layout_toRightOf="@+id/in_fr2_iv"
            android:layout_below="@+id/in_fr2_tv1"
            android:textSize="14sp"
            android:textColor="#9A9A9A"
            android:text="大便难，便不尽" />
        <TextView
            android:id="@+id/in_fr2_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/in_fr_btn1"
            android:layout_toRightOf="@+id/in_fr2_tv1"
            android:layout_above="@+id/in_fr2_tv2"
            android:textColor="#000"
            android:textSize="12sp"
            android:text="使用 390/96%" />

        <Button
            android:id="@+id/in_fr_btn1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="#fff"
            android:text=" > " />

</RelativeLayout>
